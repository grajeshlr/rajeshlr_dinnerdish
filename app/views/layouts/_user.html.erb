<% @users.each do |user| %>
    <div id= 'page-content'>
      <div class= 'row justify-content-md-center'>
        <div class= 'col-6 mt-4'>
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
              <%= link_to user.name, user%>
                <p> <%=user.email%> </p>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to gravatar_for(user, size: 150), user%></h5>
              <p class="card-text"><%= pluralize(user.orders.count, "order")%></p>
              <a><%= link_to "View profile", user_path(user), class: "btn btn-outline-success" %></a>
              <a> <%= link_to "Edit profile", edit_user_path(user), class: "btn btn-outline-info"%></a>
              <a> <%= link_to "Delete", user_path(user), class: "btn btn-outline-danger", method: :delete, data: {confim: "are you sure"}%></a>
            </div>
            <div class="card-footer text-muted">
              <span>Created user at: <%= time_ago_in_words(user.created_at)%></span>
            </div>
          </div>
        </div>
    </div>
<% end %>