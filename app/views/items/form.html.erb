<div class= 'container'>
  <div class= 'row justify-content-center'>
    <div class= 'col-12'>
      <%= render "shared/errors", obj: @item%>
      <%= form_with(model: @item, class: 'shadow p-3 mb-3 bg-info rounded', local: true) do |f| %>
        <div class= 'form-group row'>
          <%= f.label :name, class: 'col-2 col-form-label text-light '%> 
          <div class= 'col-10'>
            <%= f.text_field :name, class: 'form-control', placeholder: "Title of recipe"%>
          </div>
        </div>
        <div class= 'form-group row'>
          <%= f.label :Description, class: 'col-2 col-form-label text-light' %>
          <div class= 'col-10'>
            <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: "Description of recipe"%>
          </div>
        </div>
        <div class= 'form-group row'>
          <%= f.label :Price, class: 'col-2 col-form-label text-light' %>
          <div class= 'col-10'>
            <%= f.number_field  :price, rows: 10, class: 'form-control', placeholder: "Enter the price"%>
          </div>
        </div>
        <div class= 'form-group row'>
          <%= f.label :Categories, class: 'col-2 col-form-label text-light' %>
          <div class= 'col-10'>
            <%= f.collection_select :category_id, Category.order(:title),:id,:title, include_blank: true %>
          </div>
        </div>
       
        <div class= "form-group row justify-content-center">
          <%= f.submit class: 'btn btn-outline-light btn-lg' %>
        </div>
      <% end %>
    </div>
    <%= link_to 'back to Items', items_path, class: 'text-info'%></p>
  </div>
</div>