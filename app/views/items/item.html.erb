<% @items.each do |item| %>
    <div id= 'page-content'>
      <div class= 'row justify-content-md-center'>
        <div class= 'col-6 mt-4'>
          <div class="card text-center shadow mb-5 bg-white rounded">
            <div class="card-header font-italic">
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= link_to item.name, item_path(item), class: 'text-success' %></h5>
              <p class="card-text"><%= item.description%></p>
              <a><%= link_to "View", item_path(item), class: "btn btn-outline-success" %></a>
              <a> <%= link_to "Edit", item_path(item),class: "btn btn-outline-info"%></a>
              <a> <%= link_to 'Delete', item_path(item), method: :delete, data: { confirm: "are you sure?"}, class: "btn btn-outline-danger" %></a>
            </div>
            <div class="card-footer text-muted">
              <span>created at: <%= time_ago_in_words(item.created_at)%></span> |
              <span>updated_at: <%= time_ago_in_words(item.updated_at)%></span>
            </div>
          </div>
        </div>
    </div>
  <% end %>