<h1 class= 'text-center' mt-4> Categories </h1>
<% @categories.each do |category| %>
  <div id= 'page-content'>
    <div class= 'row justify-content-md-center'>
      <div class= 'col-4 mt-4'>
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-body">
            <h5 class="card-title"><%= link_to category.title, category_path(category), class: 'text-success' %></h5>
             <p class="card-text"><%= pluralize(category.items.count, "Items")%></p>
          </div>
          <div class="card-footer text-muted">
            <span>created at: <%= time_ago_in_words(category.created_at)%></span>
          </div>
        </div>
      </div>
  </div>
<% end %>